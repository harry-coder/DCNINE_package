<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece1d0"
    >
    <LinearLayout
        style="@style/page_body">

        <LinearLayout
            style="@style/inhead">
            <ImageView
                android:id="@+id/imageView1"
                android:background="@drawable/factory_logo"
                style="@style/inhead_ico"/>
            <com.dc9_master.CustomTextView
                style="@style/inhead_ttl"
                android:text="Factory Inspection"/>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Date of Audit :"/>
            <com.dc9_master.CustomTextView
                android:id="@+id/ed_insp_date"
                style="@style/input_gen"
                android:inputType="date"
                android:hint="Date of Audit"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="PO No. :"/>
            <com.dc9_master.CustomTextInput
                android:id="@+id/ed_pono"
                android:hint="PO No."
                android:inputType="number"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="DI No. :"/>
            <com.dc9_master.CustomTextInput
                android:id="@+id/ed_dino"
                android:hint="DI No."
                android:inputType="number"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Factory Location :"/>
            <com.dc9_master.CustomTextInput
                android:id="@+id/ed_factory_loc"
                android:hint="Enter Factory Location"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Vendor Rep. Name :"/>
            <com.dc9_master.CustomTextInput
                android:hint="Vendor Rep. Name"
                android:id="@+id/ed_vendorrsp"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Factory Rep. Name :"/>
            <com.dc9_master.CustomTextInput
                android:hint="Factory Rep. Name"
                android:id="@+id/ed_factory_rsp_name"
                style="@style/input_gen"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/next_btn"
            style="@style/btn_submit"/>

    </LinearLayout>
</ScrollView>