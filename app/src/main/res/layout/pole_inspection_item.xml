<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece1d0"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                style="@style/page_body">

                <LinearLayout
                    style="@style/inhead">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:background="@drawable/jmc_logo"
                        style="@style/inhead_ico"/>
                    <com.dc9_master.CustomTextView
                        style="@style/inhead_ttl"
                        android:text="Pre JMC"/>
                    <com.dc9_master.CustomTextView
                        android:id="@+id/text_logo"
                        style="@style/inhead_subttl"
                        android:text=""/>
                </LinearLayout>

                <!--android:textColor="#0f2433" />-->
            </LinearLayout>


            <FrameLayout
                android:id="@+id/list"
                style="@style/remarkFrame">
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="126dp"
                    android:choiceMode="multipleChoice"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="5dp"
                    android:textSize="8px"/>

                <LinearLayout
                    style="@style/btn_holdrow"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">
                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/take_photo_factory_button"/>
                        <com.dc9_master.CustomTextButton
                            android:id="@+id/btn_camera"
                            style="@style/btn_frm_btn"
                            android:text="Take Picture"/>
                    </FrameLayout>
                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">
                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/item_observation_btn" />
                        <com.dc9_master.CustomTextButton
                            android:id="@+id/btn_remark"
                            style="@style/btn_frm_btn"
                            android:text="Remarks"/>
                    </FrameLayout>
                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">
                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/ico_next"/>
                        <com.dc9_master.CustomTextButton
                            android:id="@+id/btn_next"
                            style="@style/btn_frm_btn"
                            android:text="Next"/>
                    </FrameLayout>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>