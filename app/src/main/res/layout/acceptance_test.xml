        <LinearLayout
            style="@style/rfi_listtab"
            android:layout_width="match_parent">

            <LinearLayout
                style="@style/matvalrow">
                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_input_manhole"
                    style="@style/input_gen"
                    android:layout_weight="4.5"
                    android:hint="Enter Start Point."
                    android:inputType="numberDecimal"
                    android:text=""/>
                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_output_manhole"
                    style="@style/input_gen"
                    android:layout_weight="4.5"
                    android:hint="Enter End Point."
                    android:inputType="numberDecimal"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Team :"/>
            <Spinner
                android:id="@+id/spinner_team"
                android:entries="@array/team"
                style="@style/input_spiner" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            style="@style/rfi_listtab"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">
            <View
                style="@style/lcview"/>
            <LinearLayout
                style="@style/matvalrow">
                <com.dc9_master.CustomTextView
                    android:text="Chainage From"
                    style="@style/matname"
                    android:layout_weight="6"/>

                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_chainage_from"
                    style="@style/input_gen"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            style="@style/rfi_listtab"
            android:layout_width="match_parent">

            <LinearLayout
                style="@style/matvalrow">
                <com.dc9_master.CustomTextView
                    android:text="Chainage To"
                    style="@style/matname"
                    android:layout_weight="6"/>

                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_chainage_to"
                    style="@style/input_gen"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:inputType="number"/>
            </LinearLayout>
            <View
                style="@style/lcview"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Cable Length :"/>
            <com.dc9_master.CustomTextInput
                android:id="@+id/ed_cable_length"
                android:hint="Length"
                android:inputType="numberDecimal"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Loop Length :"/>
            <com.dc9_master.CustomTextInput
                android:inputType="numberDecimal"
                android:id="@+id/ed_loop_length"
                android:hint="Length"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Total Length :"/>
            <com.dc9_master.CustomTextInput
                android:id="@+id/ed_total_length"
                android:hint="Length"
                android:inputType="numberDecimal"
                style="@style/input_gen"/>
        </LinearLayout>
        <LinearLayout
            style="@style/btn_holdrow"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <FrameLayout
                style="@style/button_frame"
                android:layout_weight="1">

                <ImageView
                    style="@style/btn_frm_img"
                    android:src="@drawable/take_photo_factory_button" />

                <com.dc9_master.CustomTextButton
                    android:id="@+id/btn_picture"
                    style="@style/btn_frm_btn"
                    android:text="Take Picture" />
            </FrameLayout>

            <FrameLayout
                style="@style/button_frame"
                android:layout_weight="1">

                <ImageView
                    style="@style/btn_frm_img"
                    android:src="@drawable/item_observation_btn" />

                <com.dc9_master.CustomTextButton
                    android:id="@+id/btn_observation"
                    style="@style/btn_frm_btn"
                    android:text="Item Obsr." />
            </FrameLayout>

            <FrameLayout
                style="@style/button_frame"
                android:layout_weight="1">

                <ImageView
                    style="@style/btn_frm_img"
                    android:src="@drawable/ico_tik" />

                <com.dc9_master.CustomTextButton
                    android:id="@+id/next_btn"
                    style="@style/btn_frm_btn"
                    android:text="Done" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>