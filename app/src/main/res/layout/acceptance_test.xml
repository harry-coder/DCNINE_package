            android:orientation="horizontal"
            android:weightSum="2">
            <Spinner
                android:id="@+id/subarea_one_id"
                style="@style/input_spiner"
                android:layout_width="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1" />
