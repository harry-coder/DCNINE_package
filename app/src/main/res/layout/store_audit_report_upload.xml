<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece1d0"
    android:orientation="vertical">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pageWrap"
    android:orientation="vertical"
    android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/pageWrap"
                android:orientation="vertical"
                android:gravity="center_horizontal">


                <LinearLayout
                    style="@style/page_body">

                    <LinearLayout
                        style="@style/inhead">
                        <ImageView
                            android:id="@+id/imageView1"
                            android:background="@drawable/store_audit_logo"
                            style="@style/inhead_ico"/>
                        <com.dc9_master.CustomTextView
                            style="@style/inhead_ttl"
                            android:text="Store Audit"/>
                        <!--<com.dc9_bajaj.CustomTextView-->
                        <!--android:id="@+id/text_logo"-->
                        <!--style="@style/inhead_subttl"-->
                        <!--android:text="Stage Name"/>-->
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/btn_holdrow"
                    android:layout_marginBottom="20dp"
                    android:layout_width="260dp">

                    <FrameLayout
                        android:layout_weight="1"
                        style="@style/button_frame">
                        <com.dc9_master.CustomTextButton
                            style="@style/btn_frm_btn"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="0dp"
                            android:id="@+id/btn_camera"
                            android:background="@drawable/btn_frm_btnbg2"
                            android:text="Upload Report If Any"/>
                    </FrameLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="260dp"
                    style="@style/btn_holdrow"
                    android:weightSum="2"
                    android:layout_marginBottom="20dp">

                    <FrameLayout
                        android:layout_weight="1"
                        style="@style/button_frame">

                        <com.dc9_master.CustomTextButton
                            android:id="@+id/finish_btn"
                            style="@style/btn_frm_btn"
                            android:paddingTop="0dp"
                            android:background="@drawable/btn_frm_btnbg2"
                            android:text="Finish"
                            />
                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
