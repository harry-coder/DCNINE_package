<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece1d0"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/page_body">

        <LinearLayout
            style="@style/inhead">
            <ImageView
                android:id="@+id/imageView1"
                android:background="@drawable/trenching_prog_logo"
                style="@style/inhead_ico"/>
            <com.dc9_master.CustomTextView
                style="@style/inhead_ttl"
                android:text="Trenching &amp; Ducting Progress"/>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="End Point :"/>
            <com.dc9_master.CustomTextInput
                android:inputType="numberDecimal"
                android:hint="End Point"
                android:id="@+id/ed_endpoint"
                style="@style/input_gen"/>
        </LinearLayout>

        <LinearLayout
            style="@style/rfi_listtab"
            android:layout_width="match_parent">
            <LinearLayout
                style="@style/matrow">
                <com.dc9_master.CustomTextView
                    android:text="Enter End Point Latt. Long."
                    style="@style/matname" />

            </LinearLayout>
            <LinearLayout
                style="@style/matvalrow">
                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_lat"
                    style="@style/input_gen"
                    android:layout_weight="4.5"
                    android:hint="Latt."
                    android:inputType="numberDecimal"
                    android:text=""/>
                <com.dc9_master.CustomTextInput
                    android:id="@+id/ed_long"
                    style="@style/input_gen"
                    android:layout_weight="4.5"
                    android:hint="Long."
                    android:inputType="numberDecimal"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Trenching Length(km) :"/>
            <com.dc9_master.CustomTextInput
                android:inputType="numberDecimal"
                android:id="@+id/ed_trenchlength"
                style="@style/input_gen"/>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Trenching Depth(km) :"/>
            <com.dc9_master.CustomTextInput
                android:inputType="numberDecimal"
                android:id="@+id/ed_trenchdepth"
                style="@style/input_gen"/>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Ducting length(km) :"/>
            <com.dc9_master.CustomTextInput
                android:inputType="numberDecimal"
                android:hint="Ducting length(km)"
                android:id="@+id/ed_ductinglength"
                style="@style/input_gen"/>
        </LinearLayout>

        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Approve/Reject  :"/>
            <Spinner
                android:id="@+id/spinner_approve_rej"
                android:entries="@array/approve"
                style="@style/input_spiner" />
        </LinearLayout>
        <LinearLayout
            style="@style/input_fieldset">
            <com.dc9_master.CustomTextView
                style="@style/input_label"
                android:text="Remark :"/>
            <com.dc9_master.CustomTextInput
                android:hint="Enter Remark"
                android:layout_height="80dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:id="@+id/ed_remark"
                style="@style/input_gen"/>
        </LinearLayout>

        <!-- <ImageButton
             android:id="@+id/next_btn"
             style="@style/btn_submit"/>-->
        <LinearLayout
            style="@style/btn_holdrow"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <FrameLayout
                style="@style/button_frame"
                android:layout_weight="1">

                <ImageView
                    style="@style/btn_frm_img"
                    android:src="@drawable/take_photo_factory_button" />

                <com.dc9_master.CustomTextButton
                    android:id="@+id/take_instru_photo"
                    style="@style/btn_frm_btn"
                    android:text="Take Instrument Picture" />
            </FrameLayout>

            <FrameLayout
                style="@style/button_frame"
                android:layout_weight="1">

                <ImageView
                    style="@style/btn_frm_img"
                    android:src="@drawable/ico_tik" />

                <com.dc9_master.CustomTextButton
                    android:id="@+id/finish_btn"
                    style="@style/btn_frm_btn"
                    android:text="Next" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>